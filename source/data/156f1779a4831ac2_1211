#include <sched.h> 
#include<stdio.h>

int main(int argc,char *argv[]){

	long mask;
    	mask = 0x1; //pointer for CPU 0
	//18792 is the id of the process you wish to migrate
    	if (sched_setaffinity(18792, sizeof(mask), &mask) != 0) {
        	printf("Error\n");
    	}
	return 0;

}


